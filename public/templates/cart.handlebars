<div class="row">
    <div class="col-md-10 col-lg-offset-1">
        <!--<img class="img-header" src="./images/decorative-line-patterns-wall-sticker-decal-6XSnqI-clipart.png" alt="curved-line">-->
        <h2 class="heading-section">Cart</h2>
        <!--<img class="img-header" src="./images/decorative-line-clip-art-cliparts-co-lQ7dzH-clipart.png" alt="curved-line">-->
    </div>
</div>
{{#if books}}
    <div class="row">
        <div class="col-md-10 col-lg-offset-1">
            <table class="table table-hover table-striped table-responsive">
                <tbody>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Delivery date</th>
                    <th></th>
                </tr>
                {{#books}}
                    <tr>
                        <td><img src="{{imgUrl}}" alt="book-cover" class="img-books-cart"></td>
                        <td><span class="cart-table-cell">{{title}}</span></td>
                        <td><span class="cart-table-cell">{{author}}</span></td>
                        <td><span class="cart-table-cell">{{price}} BGN</span></td>
                        <td><span class="cart-table-cell"><em>Up to 3 days</em></span></td>
                        <td class="vert-align">
                            <button type="button" class="btn btn-block btn-danger remove-from-cart"
                                    data-book-id="{{_id}}">Remove
                            </button>
                        </td>
                    </tr>
                {{/books}}
                </tbody>
            </table>
        </div>
    </div>
    <div style="margin-bottom: 2em" class="row">
        <div class="col-lg-4 col-lg-offset-8">
            <span class="total-cost">Total: {{totalPrice}} BGN</span>
        </div>
    </div>
    <div class="row" style="margin-bottom: 3em;">
        <div class="col-lg-4 col-lg-offset-8">
            <button id="checkout-button" class="btn btn-default inline" data-toggle="modal"
                    data-target="#checkout-modal">Checkout
            </button>
        </div>
    </div>

    <div class="row" style="margin-bottom: 3em;">
        <div class="col-lg-4 col-lg-offset-8">
            <a class="btn btn-success inline" href="#products">Continue shopping</a>
        </div>
    </div>

    <!-- Modal -->
    <div id="checkout-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Order</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to place your order?</p>
                    <p>Total: {{totalPrice}} BGN</p>
                </div>
                <div class="modal-footer">
                    <button id="checkout-btn" type="button" class="btn btn-success" data-dismiss="modal">Place order
                    </button>
                </div>
            </div>

        </div>
    </div>
{{else}}
    <div class="row">
        <p>
            Cart is empty!
        </p>
    </div>
{{/if}}