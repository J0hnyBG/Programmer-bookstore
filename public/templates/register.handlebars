<div class="col-md-4 col-md-offset-4">
    <form action="" id="register-form">
        <h1>Sign Up</h1>
        <div class="form-group">
            <label for="tb-username">Username: </label>
            <input id="tb-username" class="form-control" placeholder="Username" required>
        </div>

        <div class="form-group">
            <label for="tb-password">Password: </label>
            <input id="tb-password" type="password" class="form-control" placeholder="Password" required>
        </div>

        <div class="form-group">
            <label for="tb-email">Email: </label>
            <input id="tb-email" type="email" class="form-control" placeholder="Email" required>
        </div>
        <div class="form-group">
            <label for="tb-address">Address: </label>
            <input id="tb-address" class="form-control" placeholder="Address" required>
        </div>
        <div class="form-group">
            <label for="tb-phone">Phone №: </label>
            <input type="number" id="tb-phone" class="form-control" placeholder="Phone №" required>
        </div>
        <input type="submit" class="btn btn-danger" id="btn-register"/>
    </form>
</div>