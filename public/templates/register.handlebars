<div class="col-lg-4">
    <h1>Sign Up</h1>
    <div class="form-group">
        <label for="tb-username">Username: </label>
        <input id="tb-username" class="form-control" placeholder="Username">
    </div>

    <div class="form-group">
        <label for="tb-password">Password: </label>
        <input id="tb-password" type="password" class="form-control" placeholder="Password">
    </div>

    <div class="form-group">
        <label for="tb-email">Email: </label>
        <input id="tb-email" type="email" class="form-control" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="tb-address">Address: </label>
        <input id="tb-address"  class="form-control" placeholder="Address">
    </div>
    <div class="form-group">
        <label for="tb-phone">Phone №: </label>
        <input id="tb-phone"  class="form-control" placeholder="Phone №">
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" value="remember-me">Remember me
        </label>
    </div>
    <button class="btn btn-danger" id="btn-register">Sign Up</button>
</div>